{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "diagnostics": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "lib"
  ]
}